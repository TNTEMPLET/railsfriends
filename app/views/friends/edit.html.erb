
<div class="card text-bg-light mb-3">
  <div class="card-header"><h4>Editing Friend</h4></div>
  <div class="card-body">
    <%= render 'form', friend: @friend %>

    <br/>
    <%= link_to 'Show', @friend, class:"btn btn-secondary" %>

    <%= link_to 'Delete', 
                  @friend, 
                  data: { turbo_confirm: "Are you sure?", turbo_method: :delete },
                  class: "btn btn-danger" %>
  </div>
</div>
<%= link_to 'Back', friends_path, class:"btn btn-dark" %>